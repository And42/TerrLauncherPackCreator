<Page x:Class="TerrLauncherPackCreator.Pages.PackCreation.PackCreationStep1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:localizations="clr-namespace:TerrLauncherPackCreator.Resources.Localizations"
      xmlns:viewModels="clr-namespace:TerrLauncherPackCreator.Code.ViewModels"
      mc:Ignorable="d" 

      d:DesignHeight="450" d:DesignWidth="800"
      FontSize="14"
      FontFamily="Century Gothic"
      
      d:DataContext="{d:DesignInstance viewModels:PackCreationViewModel, IsDesignTimeCreatable=True}">

    <Grid UseLayoutRounding="True">
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="Margin" Value="10 3"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Padding" Value="7 3"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Padding" Value="7 3"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="xctk:IntegerUpDown" BasedOn="{StaticResource {x:Type xctk:IntegerUpDown}}">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Padding" Value="7 2"/>
            </Style>

            <Style x:Key="MultilineTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="AcceptsReturn" Value="True"/>
                <Setter Property="MaxLines" Value="5"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static localizations:StringResources.PackIcon}"/>
        <Grid Grid.Row="0" Grid.Column="1" Width="120" Height="120" Margin="3">
            <Grid Visibility="{Binding Icon.Value, Mode=OneWay, Converter={StaticResource VisibleIfNullConverter}}"
                  AllowDrop="True" DragOver="Icon_OnDragOver" Drop="Icon_OnDrop">
                <Rectangle StrokeDashArray="4 1" Stroke="#888888" Fill="WhiteSmoke" StrokeThickness="3" RadiusX="10" RadiusY="10"/>
                <TextBlock Text="{x:Static localizations:StringResources.DragIconHelpText}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
            <Image VerticalAlignment="Center" HorizontalAlignment="Center"
                   Source="{Binding Icon.Value, Mode=OneWay}"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Grid>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static localizations:StringResources.PackTitle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Title.Value}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static localizations:StringResources.PackDescriptionRussian}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource MultilineTextBox}" Text="{Binding DescriptionRussian.Value}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static localizations:StringResources.PackDescriptionEnglish}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource MultilineTextBox}" Text="{Binding DescriptionEnglish.Value}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static localizations:StringResources.PackGuid}"/>
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="{Binding Guid.Value}"/>
            <Button Grid.Column="1" Content="{x:Static localizations:StringResources.NewGuidCaption}"
                    Command="{Binding CreateNewGuidCommand}"/>
        </Grid>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="{x:Static localizations:StringResources.PackVersion}"/>
        <xctk:IntegerUpDown Grid.Row="5" Grid.Column="1" Minimum="1" Value="{Binding Version.Value}"/>
    </Grid>
</Page>
